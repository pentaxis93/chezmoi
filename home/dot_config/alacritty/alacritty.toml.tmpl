{{- $theme := .themes.kanagawa.dragon -}}
{{- $s := .semantic -}}
{{- $kb := .keybindings -}}
[env]
TERM = "xterm-256color"
WINIT_X11_SCALE_FACTOR = "1"

[window]
dynamic_padding = true
decorations = "full"
title = "Alacritty@CachyOS"
opacity = 1.0
decorations_theme_variant = "Dark"

[window.dimensions]
columns = 100
lines = 30

[window.class]
instance = "Alacritty"
general = "Alacritty"

[scrolling]
history = 10000
multiplier = 3

[colors]
draw_bold_text_with_bright_colors = true

[colors.primary]
background = {{ template "color-quoted.tmpl" (index $theme $s.surface.primary) }}
foreground = {{ template "color-quoted.tmpl" (index $theme $s.text.primary) }}

[colors.normal]
black = {{ template "color-quoted.tmpl" $theme.black }}
red = {{ template "color-quoted.tmpl" $theme.red }}
green = {{ template "color-quoted.tmpl" $theme.green }}
yellow = {{ template "color-quoted.tmpl" $theme.yellow }}
blue = {{ template "color-quoted.tmpl" $theme.blue }}
magenta = {{ template "color-quoted.tmpl" $theme.magenta }}
cyan = {{ template "color-quoted.tmpl" $theme.cyan }}
white = {{ template "color-quoted.tmpl" $theme.white }}

[colors.bright]
black = {{ template "color-quoted.tmpl" $theme.bright_black }}
red = {{ template "color-quoted.tmpl" $theme.bright_red }}
green = {{ template "color-quoted.tmpl" $theme.bright_green }}
yellow = {{ template "color-quoted.tmpl" $theme.bright_yellow }}
blue = {{ template "color-quoted.tmpl" $theme.bright_blue }}
magenta = {{ template "color-quoted.tmpl" $theme.bright_magenta }}
cyan = {{ template "color-quoted.tmpl" $theme.bright_cyan }}
white = {{ template "color-quoted.tmpl" $theme.bright_white }}

[font]
size = 20

[font.normal]
family = "monospace"
style = "Regular"

[font.bold]
family = "monospace"
style = "Bold"

[font.italic]
family = "monospace"
style = "Italic"

[font.bold_italic]
family = "monospace"
style = "Bold Italic"

[colors.selection]
background = {{ template "color-quoted.tmpl" (index $theme $s.selection.background) }}
foreground = {{ template "color-quoted.tmpl" (index $theme $s.selection.foreground) }}

# Vi mode colors - Semantic visual feedback
[colors.vi_mode_cursor]
background = {{ template "color-quoted.tmpl" (index $theme $s.interactive.focus) }}  # Focus for vi mode
foreground = {{ template "color-quoted.tmpl" (index $theme $s.surface.primary) }}

[[colors.indexed_colors]]
index = 16
color = {{ template "color-quoted.tmpl" $theme.indexed_16 }}

[[colors.indexed_colors]]
index = 17
color = {{ template "color-quoted.tmpl" $theme.indexed_17 }}

[selection]
semantic_escape_chars = ",â”‚`|:\"' ()[]{}<>\t"
save_to_clipboard = true

[cursor]
style = "Underline"
vi_mode_style = "Block"            # Visual indicator for vi mode
unfocused_hollow = true
thickness = 0.15

# Terminal bell configuration - Audio only, no visual
[bell]
duration = 0                                              # No visual bell
command = { program = "paplay", args = ["/usr/share/sounds/freedesktop/stereo/complete.oga"] }  # Modern completion chime

[mouse]
hide_when_typing = true

[[mouse.bindings]]
mouse = "Middle"
action = "PasteSelection"

[keyboard]
[[keyboard.bindings]]
key = "Paste"
action = "Paste"

[[keyboard.bindings]]
key = "Copy"
action = "Copy"

[[keyboard.bindings]]
key = "L"
mods = "Control"
action = "ClearLogNotice"

[[keyboard.bindings]]
key = "L"
mods = "Control"
mode = "~Vi"
chars = "\f"

[[keyboard.bindings]]
key = "PageUp"
mods = "Shift"
mode = "~Alt"
action = "ScrollPageUp"

[[keyboard.bindings]]
key = "PageDown"
mods = "Shift"
mode = "~Alt"
action = "ScrollPageDown"

[[keyboard.bindings]]
key = "Home"
mods = "Shift"
mode = "~Alt"
action = "ScrollToTop"

[[keyboard.bindings]]
key = "End"
mods = "Shift"
mode = "~Alt"
action = "ScrollToBottom"

[[keyboard.bindings]]
key = "V"
mods = "Control|Shift"
action = "Paste"

[[keyboard.bindings]]
key = "C"
mods = "Control|Shift"
action = "Copy"

[[keyboard.bindings]]
key = "F"
mods = "Control|Shift"
action = "SearchForward"

[[keyboard.bindings]]
key = "B"
mods = "Control|Shift"
action = "SearchBackward"

# Vi mode semantic keybindings - Helix-native navigation
{{ template "keybind-alacritty.tmpl" dict "category" "transform" "action" "clear_selection" "alacritty_action" "ClearSelection" "mode" "Vi" "comment" "Clear selection" "keybindings" $kb }}

# Enable vi mode with semantic toggle
{{ template "keybind-alacritty.tmpl" dict "category" "transform" "action" "mode_toggle" "alacritty_action" "ToggleViMode" "comment" "Toggle vi mode" "keybindings" $kb }}

# Helix-native file navigation in vi mode
[[keyboard.bindings]]
key = "G"
mods = "Shift"
mode = "Vi"
action = "Last"                # Traditional G still works (fallback)

{{ template "keybind-alacritty.tmpl" dict "category" "navigate" "action" "file_end" "alacritty_action" "Last" "mode" "Vi" "comment" "Helix ge (go end)" "keybindings" $kb }}

# Search in vi mode - Helix/vim style
{{ template "keybind-alacritty.tmpl" dict "category" "discover" "action" "search_forward" "alacritty_action" "SearchForward" "mode" "Vi" "comment" "Search forward" "keybindings" $kb }}

{{ template "keybind-alacritty.tmpl" dict "category" "discover" "action" "search_backward" "alacritty_action" "SearchBackward" "mode" "Vi" "comment" "Search backward" "keybindings" $kb }}

# Search navigation - n/N to cycle through results
{{ template "keybind-alacritty.tmpl" dict "category" "discover" "action" "search_next" "alacritty_action" "SearchNext" "mode" "Vi" "comment" "Next match" "keybindings" $kb }}

{{ template "keybind-alacritty.tmpl" dict "category" "discover" "action" "search_prev" "alacritty_action" "SearchPrevious" "mode" "Vi" "comment" "Previous match" "keybindings" $kb }}

[[keyboard.bindings]]
key = "Key0"
mods = "Control"
action = "ResetFontSize"

[general]
live_config_reload = true
working_directory = "None"
