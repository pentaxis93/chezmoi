{{- $c := .kanagawa.dragon -}}
/* Kanagawa Dragon Theme - Ultra-thin Waybar */
/* Colors sourced from ~/.chezmoidata/colors.yaml */

* {
    font-family: "JetBrains Mono", "Fira Code", "Source Code Pro", monospace;
    font-size: 18px;
    font-weight: 500;
    border: none;
    border-radius: 0;
    min-height: 0;
}

window#waybar {
    background-color: {{ template "color-hex.tmpl" $c.bg_dark }};
    color: {{ template "color-hex.tmpl" $c.fg_primary }};
}

/* All modules default styling */
#window,
#battery,
#backlight,
#disk,
#bluetooth,
#network,
#cpu,
#memory,
#pulseaudio,
#custom-weather,
#custom-vpn,
#clock {
    padding: 0 8px;
    margin: 0;
    background-color: transparent;
    color: {{ template "color-hex.tmpl" $c.fg_primary }};
}

/* Workspace buttons */
#workspaces button {
    padding: 0 8px;
    margin: 0;
    background-color: transparent;
    color: {{ template "color-hex.tmpl" $c.focus }};
    font-weight: 500;
}

#workspaces button.active {
    color: {{ template "color-hex.tmpl" $c.focus }};
    background-color: {{ template "color-hex.tmpl" $c.ui_active_workspace }};
    font-weight: 600;
}

#workspaces button:hover {
    background: {{ template "color-hex.tmpl" $c.ui_hover }};
    background-color: {{ template "color-hex.tmpl" $c.ui_hover }};
    color: #98a88f;  /* Computed brighter green */
    box-shadow: inherit;
    text-shadow: inherit;
    border: none;
    transition: none;
}

#workspaces button.active:hover {
    background: {{ template "color-hex.tmpl" $c.ui_hover_active }};
    background-color: {{ template "color-hex.tmpl" $c.ui_hover_active }};
    color: #98a88f;  /* Computed brighter green */
    box-shadow: inherit;
    text-shadow: inherit;
    border: none;
    transition: none;
}

/* Active window title */
#window {
    color: {{ template "color-hex.tmpl" $c.focus }};
    font-weight: 400;
}

window#waybar.empty #window {
    color: {{ template "color-hex.tmpl" $c.bg_lighter }};
}

/* Spectrum progression: Red → Orange → Yellow → Green → Cyan → Blue → Violet */

/* Disk - Red (root resources) */
#disk {
    color: {{ template "color-hex.tmpl" $c.red }};
}

/* CPU - Orange (processing heat) */
#cpu {
    color: {{ template "color-hex.tmpl" $c.orange }};
}

/* Memory - Yellow (storage) */
#memory {
    color: {{ template "color-hex.tmpl" $c.yellow }};
}

/* Backlight - Yellow-green (illumination) */
#backlight {
    color: #87a96b;  /* Custom blend */
}

/* Pulseaudio - Green (sound waves) */
#pulseaudio {
    color: {{ template "color-hex.tmpl" $c.green }};
}

/* Bluetooth - Cyan (wireless) */
#bluetooth {
    color: {{ template "color-hex.tmpl" $c.bright_cyan }};
}

/* Network - Blue (connectivity) */
#network {
    color: {{ template "color-hex.tmpl" $c.blue }};
}

/* VPN - Blue (secure connectivity) - integrates visually with network */
#custom-vpn {
    color: {{ template "color-hex.tmpl" $c.blue }};
    padding-left: 0;
    padding-right: 8px;
    margin-left: -6px;
}

/* Weather - Light blue (atmosphere) */
#custom-weather {
    color: #7e9cd8;  /* Custom weather blue */
}

/* Battery - Blue-violet (energy) */
#battery {
    color: {{ template "color-hex.tmpl" $c.bright_magenta }};
}

/* Clock - Violet (time's mystery) */
#clock {
    color: {{ template "color-hex.tmpl" $c.magenta }};
    font-weight: 600;
    padding-right: 12px;
}

/* Consistent hover effects for interactive modules */
#pulseaudio:hover,
#backlight:hover,
#bluetooth:hover,
#network:hover {
    background-color: {{ template "color-hex.tmpl" $c.ui_hover }};
}

/* Tooltip styling */
tooltip {
    background-color: {{ template "color-hex.tmpl" $c.bg_dark }};
    color: {{ template "color-hex.tmpl" $c.fg_primary }};
    border: 1px solid {{ template "color-hex.tmpl" $c.selection }};
    padding: 4px 8px;
    font-size: 12px;
}