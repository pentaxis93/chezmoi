{{- $c := .kanagawa.dragon -}}
/* Kanagawa Dragon Theme - Ultra-thin Waybar */
/* Colors sourced from ~/.chezmoidata/colors.yaml */

* {
    font-family: "JetBrains Mono", "Fira Code", "Source Code Pro", monospace;
    font-size: 18px;
    font-weight: 500;
    border: none;
    border-radius: 0;
    min-height: 0;
}

window#waybar {
    background-color: {{ template "color-hex.tmpl" $c.bg_dark }};
    color: {{ template "color-hex.tmpl" $c.fg_primary }};
}

/* All modules default styling */
#window,
#battery,
#backlight,
#disk,
#bluetooth,
#network,
#cpu,
#memory,
#pulseaudio,
#custom-weather,
#custom-vpn,
#clock {
    padding: 0 8px;
    margin: 0;
    background-color: transparent;
    color: {{ template "color-hex.tmpl" $c.fg_primary }};
}

/* Workspace buttons */
#workspaces button {
    padding: 0 8px;
    margin: 0;
    background-color: transparent;
    color: {{ template "color-hex.tmpl" $c.focus }};
    font-weight: 500;
}

#workspaces button.active {
    color: {{ template "color-hex.tmpl" $c.focus }};
    background-color: {{ template "color-hex.tmpl" $c.ui_active_workspace }};
    font-weight: 600;
}

#workspaces button:hover {
    background: {{ template "color-hex.tmpl" $c.ui_hover }};
    background-color: {{ template "color-hex.tmpl" $c.ui_hover }};
    color: {{ template "color-hex.tmpl" $c.green_bright }};
    box-shadow: inherit;
    text-shadow: inherit;
    border: none;
    transition: none;
}

#workspaces button.active:hover {
    background: {{ template "color-hex.tmpl" $c.ui_hover_active }};
    background-color: {{ template "color-hex.tmpl" $c.ui_hover_active }};
    color: {{ template "color-hex.tmpl" $c.green_bright }};
    box-shadow: inherit;
    text-shadow: inherit;
    border: none;
    transition: none;
}

/* Active window title */
#window {
    color: {{ template "color-hex.tmpl" $c.focus }};
    font-weight: 400;
}

window#waybar.empty #window {
    color: {{ template "color-hex.tmpl" $c.bg_lighter }};
}

/* Spectrum Progression: Red â†’ Violet
   Algorithmic generation ensures perfect spacing regardless of module count */
{{- $modules := list "disk" "cpu" "memory" "backlight" "pulseaudio" "bluetooth" "network" "custom-weather" "battery" "clock" -}}
{{- $script := joinPath .chezmoi.sourceDir ".." "scripts" "generate-spectrum.py" -}}
{{- $output := output "python3" $script (index $c "red") (index $c "magenta") (toString (len $modules)) -}}
{{- $spectrum := $output | trim | splitList "\n" -}}

/* Status modules - Perceptually uniform spectrum (LAB interpolation) */
{{- range $i, $module := $modules }}
#{{ $module }} {
    color: #{{ index $spectrum $i }};
{{- if eq $module "clock" }}
    font-weight: 600;
    padding-right: 12px;
{{- end }}
}
{{ end }}
/* VPN - Blue (secure connectivity) - integrates visually with network */
#custom-vpn {
    color: {{ template "color-hex.tmpl" $c.blue }};
    padding-left: 0;
    padding-right: 8px;
    margin-left: -6px;
}

/* Consistent hover effects for interactive modules */
#pulseaudio:hover,
#backlight:hover,
#bluetooth:hover,
#network:hover {
    background-color: {{ template "color-hex.tmpl" $c.ui_hover }};
}

/* Tooltip styling */
tooltip {
    background-color: {{ template "color-hex.tmpl" $c.bg_dark }};
    color: {{ template "color-hex.tmpl" $c.fg_primary }};
    border: 1px solid {{ template "color-hex.tmpl" $c.selection }};
    padding: 4px 8px;
    font-size: 12px;
}