function volm --description "Toggle mute (volume-mute)"
    # Ultra-Zen Philosophy: Silence
    # "Silence is not absence, but presence of intention"

    # Use pamixer for quick CLI volume control
    if command -v pamixer >/dev/null 2>&1
        pamixer -t
        # Show mute status
        if test (pamixer --get-mute) = "true"
            echo "Volume: Muted"
        else
            echo "Volume: $(pamixer --get-volume)%"
        end
    else
        echo "pamixer not found. Install it or use 'vol' for TUI control."
        return 1
    end
end