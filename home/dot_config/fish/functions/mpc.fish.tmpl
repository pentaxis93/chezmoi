function mpc --description "Clear mpv watch history and saved positions (mpc = media-play-clear)"
    set -l history_file ~/.local/state/mpv/watch_history.jsonl
    set -l watch_later ~/.local/state/mpv/watch_later

    # Confirm action
    echo "This will clear:"
    test -f $history_file && echo "  - Watch history"
    test -d $watch_later && echo "  - Saved playback positions"

    read -P "Continue? [y/N] " -n 1 confirm
    if test "$confirm" != "y"
        echo "Cancelled"
        return 1
    end

    # Clear history file
    if test -f $history_file
        rm $history_file
        echo "Watch history cleared"
    end

    # Clear saved positions
    if test -d $watch_later
        rm -rf $watch_later/*
        echo "Saved positions cleared"
    end

    echo "MPV data cleared"
end

# Register semantic abbreviation
abbr --add mpc mpc