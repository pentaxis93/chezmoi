function vols --description "Show volume status (volume-status)"
    # Ultra-Zen Philosophy: Awareness
    # "To know the current state is the first step to change"

    # Use pamixer for quick status check
    if command -v pamixer >/dev/null 2>&1
        set -l volume (pamixer --get-volume)
        set -l muted (pamixer --get-mute)

        if test "$muted" = "true"
            echo "Volume: Muted (was $volume%)"
        else
            echo "Volume: $volume%"
        end

        # Show default sink info
        echo ""
        echo "Default Output:"
        pactl get-default-sink | xargs -I {} pactl list sinks short | grep {}
    else
        echo "pamixer not found. Install it or use 'vol' for TUI control."
        return 1
    end
end