{{- /* VPN Configuration Environment Variables */ -}}
# VPN Server Configuration
# These variables are loaded automatically when Fish starts

# Goose VPN Server Details
set -gx VPN_SERVER "nl-7.goosevpn.com"
set -gx VPN_PORT "443"
set -gx VPN_PROTOCOL "tcp-client"

# VPN Configuration Paths
set -gx VPN_CONFIG_FILE "$HOME/.config/openvpn/goosevpn.conf"
set -gx VPN_AUTH_FILE "$HOME/.local/state/secrets/openvpn/goosevpn-auth"